{
  "name": "@cgauge/dtc-react-plugin",
  "version": "0.13.0",
  "description": "React plugin for Declarative TestCases",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cgauge/packages.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Abdala Cerqueira",
  "license": "LGPL-3.0-or-later",
  "dependencies": {
    "@cgauge/assert": "^0.13.0",
    "@cgauge/dtc": "^0.13.0",
    "@cgauge/type-guard": "^0.13.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "jsdom": "^26.0.0",
    "global-jsdom": "^26.0.0",
    "react": ">14",
    "react-dom": ">14"
  },
  "devDependencies": {
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3"
  },
  "scripts": {
    "build": "tsc --build --verbose",
    "test": "tsx --test test/*.test.ts",
